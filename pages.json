{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "luopc1218"
			}
		},
		{
			"path": "pages/blog/index",
			"style": {
				"navigationBarTitleText": "博客"
			}
		},
		{
			"path": "pages/bbs/index",
			"style": {
				"navigationBarTitleText": "论坛"
			}
		},
		{
			"path": "pages/me/index",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"selectedColor": "#486491",
		"list": [{
				"pagePath": "pages/index/index",
				
				"text": "首页",
				"iconPath": "static/png/home.png",
				"selectedIconPath": "static/png/home-fill.png"
			},
			{
				"pagePath": "pages/blog/index",
				"text": "博客",
				"iconPath": "static/png/image-text.png",
				"selectedIconPath": "static/png/image-text-fill.png"
			},
			{
				"pagePath": "pages/bbs/index",
				"text": "论坛",
				"iconPath": "static/png/trust.png",
				"selectedIconPath": "static/png/trust-fill.png"
			},
			{
				"pagePath": "pages/me/index",
				"text": "我的",
				"iconPath": "static/png/account.png",
				"selectedIconPath": "static/png/account-fill.png"
			}
		]
	}
}
